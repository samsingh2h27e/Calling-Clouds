<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <title>Calling clouds</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="parent">
        <div class="main">
            <nav>
                <form action="/submit" method="post">
                    <input type = "text" name="place" placeholder="enter the cityname">
                    <button>
                        <img src="./images/search.png">
                    </button>
                </form>
            </nav>
            <% if(locals.data){ %>
                <% if(data.weather[0].main=="clouds"){ %>
                    <img class="Wimg" src="./images/clouds.png">
                <% } else if(data.weather[0].main.toLowerCase()=="clear") {%>
                    <img class="Wimg" src="./images/clear.png">
                <% } else if(data.weather[0].main.toLowerCase()=="mist") {%>
                    <img class="Wimg" src="./images/mist.png">
                <% } else if(data.weather[0].main.toLowerCase()=="rain") {%>
                    <img class="Wimg" src="./images/rain.png">
                <% } else if(data.weather[0].main.toLowerCase()=="snow") {%>
                    <img class="Wimg" src="./images/snow.png">
                <%} else {%>
                    <img class="Wimg" src="./images/drizzle.png">
                <% } %>
            <% } else {%>
                <div class="home">
                    Hello welcome to calling clouds
                </div>
            <% } %> 
            <div class="text">
                <% if(locals.data) { %>
                    <span><span><%= data.main.temp %></span>Â°C</span>
                <% } else {%>
                    <span></span><span></span>
                <% } %>
                <% if(locals.data) {%>
                    <span><%= data.name %></span>
                <% } else {%>
                    <span></span>
                <% } %>
            </div>
            <% if(locals.data){ %>
                <div class="second">
                    <div class="hw humidity">
                        <img src="./images/humidity.png">
                        <% if(locals.data) {%>
                            <span><%= data.main.humidity %>%</span>
                        <% } else {%>
                            <span></span>
                        <% } %>
                        <span>Humidity</span>
                    </div>
                <% } %>  
                <% if(locals.data){ %>  
                    <div class="hw wind">
                        <img src="./images/wind.png">
                        <% if(locals.data) {%>
                            <span><%= data.wind.speed %>KM/h</span>
                        <% } else {%>
                            <span></span>
                        <% } %>
                        <span>Wind speed</span>
                    </div>
                <% } %> 
            </div>
        </div>
    </div>
</body>
</html>